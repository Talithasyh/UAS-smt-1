#include <iostream>

using namespace std;

int main () {    
   char pw[6];    
   
    for (int i=0;i<6;i++) {
        cout << "password : ";
        cin >> pw[i];
        cout << endl;
        
   if ((pw[i]=='a') || (pw[i]=='b') || (pw[i]=='c')) {
       pw[i] = '2';
   } 
   else if ((pw[i]=='d') || (pw[i]=='e') || (pw[i]=='f')) {
       pw[i] = '3';
   } 
   else if ((pw[i]=='g') || (pw[i]=='h') || (pw[i]=='i')) {
       pw[i] = '4';
   } 
   else if ((pw[i]=='j') || (pw[i]=='k') || (pw[i]=='l')) {
       pw [i] = '5';
   } 
   else if ((pw[i]=='m') || (pw[i]=='n') || (pw[i]=='o')) {
       pw[i] = '6';
   } 
   else if ((pw[i]=='p') || (pw[i]=='q') || (pw[i]=='r')) {
       pw[i] = '7';
   } 
   else if ((pw[i]=='t') || (pw[i]=='u') || (pw[i]=='v')) {
       pw[i] = '8';
   } 
   else if ((pw[i]=='w') || (pw[i]=='x') || (pw[i]=='y') || (pw[i]=='z')) {
       pw[i] = '9';
   } 
   else if ((pw[i]=='+')) {
       pw[i] = '0';
   } 
   else {
       cout << "password yang anda masukan salah" << endl;
   }
   }
   cout << " konversi password : ";
   for (int i=0;i<6;i++) {
       cout << pw[i];
   }

}
